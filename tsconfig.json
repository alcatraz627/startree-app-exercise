{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "types": ["webpack-env"],
        "lib": ["dom", "esnext"],
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "@Styles": ["src/styles"],
            "@Styles/*": ["src/styles/*"],
            "@Const/*": ["constants/*"],
            "@Components/*": ["components/*"],
            "@Common/*": ["components/common/*"]
        }
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
}
